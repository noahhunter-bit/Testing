<script>
  document.getElementById('year').textContent = new Date().getFullYear();

  function handleSubmit(e){
    e.preventDefault();
    // Local validation already via required attributes; here we show a friendly message.
    const name = document.getElementById('name').value.trim();
    const formMsg = document.getElementById('formMsg');
    formMsg.textContent = "Thanks, " + (name||"there") + "! This demo doesn't send messages. To actually receive submissions, add a backend or use Formspree/Netlify Forms.";
    return false;
  }
</script>
